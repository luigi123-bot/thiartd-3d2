                productosArr = Array.isArray(parsed) ? parsed as Producto[] : [];
              } catch {
                productosArr = [];
              }
            } else if (Array.isArray(pedido.productos)) {
              productosArr = pedido.productos as unknown as Producto[];
            }
            
            // Construir direcci√≥n completa para el mapa
