              : null;
            
            const estadoBadgeClass = pedido.estado === 'pagado' 
              ? 'bg-emerald-100 text-emerald-800 border-emerald-300'
              : pedido.estado === 'pendiente_pago'
              ? 'bg-amber-100 text-amber-800 border-amber-300'
              : pedido.estado === 'pago_rechazado' || pedido.estado === 'pago_cancelado'
              ? 'bg-rose-100 text-rose-800 border-rose-300'
              : 'bg-slate-100 text-slate-800 border-slate-300';
            
            return (
              <div className="h-full flex flex-col overflow-hidden">
                {/* Header - Barra superior con informaci√≥n clave */}
                <div className="flex-shrink-0 bg-gradient-to-r from-[#007973] to-[#00a19a] px-8 py-6 shadow-xl">
                  <div className="flex items-center justify-between">
                    <div className="flex items-center gap-6">
                      <div>
                        <h1 className="text-3xl font-bold text-white mb-1">Pedido #{pedido.id}</h1>
                        <p className="text-sm text-white/80">
                          {new Date(pedido.created_at).toLocaleDateString('es-ES', { 
